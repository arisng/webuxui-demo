<div class="offline-indicator offline-indicator--@StatusClass"
     role="status"
     aria-live="polite"
     aria-label="@AriaLabel"
     title="@Title">
    <span class="offline-indicator__dot"></span>
    <span class="offline-indicator__label">@Title</span>
</div>

@code {
    [Parameter]
    public string Status { get; set; } = "downloading";

    private string StatusClass => Status switch
    {
        "ready" => "ready",
        "offline" => "offline",
        "offline-not-ready" => "offline-not-ready",
        _ => "downloading"
    };

    private string Title => Status switch
    {
        "ready" => "Offline ready",
        "offline" => "Offline active",
        "offline-not-ready" => "Offline (not cached)",
        _ => "Caching offline assets"
    };

    private string AriaLabel => $"Offline status: {Title}";
}

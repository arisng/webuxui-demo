@if (IsVisible)
{
    <div class="toast-pill" role="status" aria-live="polite">
        <span class="toast-pill__icon" aria-hidden="true">
            <svg viewBox="0 0 20 20" aria-hidden="true" focusable="false">
                <path d="M7.8 13.3 4.9 10.4l1.3-1.3 1.6 1.6 4-4 1.3 1.3-5.3 5.3z" />
            </svg>
        </span>
        <div class="toast-pill__content">
            <span class="toast-pill__message">@Message</span>
        </div>
        @if (!string.IsNullOrWhiteSpace(ActionLabel))
        {
            <button type="button" class="toast-pill__action" @onclick="OnAction">@ActionLabel</button>
        }
        <button type="button" class="toast-pill__dismiss" @onclick="OnDismiss">@DismissLabel</button>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string Message { get; set; } = "App is ready for offline use.";

    [Parameter]
    public EventCallback OnDismiss { get; set; }

    [Parameter]
    public string DismissLabel { get; set; } = "Dismiss";

    [Parameter]
    public string? ActionLabel { get; set; }

    [Parameter]
    public EventCallback OnAction { get; set; }
}
